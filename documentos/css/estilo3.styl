azul = #22BCE0
gris_oscuro = #444
gris_texto  = #7A7A7A
naranja = #DD4F24
header
	background azul
	color: white
	position: relative
	.imagen
		border-right:1px solid red
		float: left
		width 90px
		img
			width: 85px
	.titular
		

		margin 0 60px 0 70px
		.titulo
			font-size 1.5em

	.publicar
		background naranja
		color white
		float right
		margin -1.5em 0em 0 0em
		padding 0.2em 0.5em
		text-decoration none
		text-shadow: 1px 1px 0 black


	h1
		margin: 0 
		padding: 1em 0
		text-align: center

footer
	background azul
	color rgba(white,0.5)
	padding: 0.7em 0
	text-align center
	width 100%
	
	h3
		font-size: 15px
		font-weight: normal

		strong
			display: block

nav
	background: rgba(0,128,255,0.6)
	border-left: 15px solid white
	position: relative

	&:before
		border-bottom: 30px solid transparent
		border-left: 7px solid white
		border-top: 30px solid transparent
		content ""
		left: 0
		position: absolute
		top 0
	.menu
		height: 60px
		line-height: 40px
		margin: 0
		padding: 0
		overflow-x auto
		white-space: nowrap

		li
			display: inline-block

			a
				color: white
				display block
				margin 0 0.5em
				padding: 0 0.2em
				text-decoration: none
		
